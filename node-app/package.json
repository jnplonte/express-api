{
	"name": "express-api",
	"description": "express api",
	"version": "1.0.0",
	"main": "index.js",
	"private": true,
	"keywords": [],
	"author": "john paul onte <jnpl.onte@gmail.com>",
	"license": "MIT",
	"quokka": {
		"babel": true
	},
	"scripts": {
		"build:production": "concurrently \"tsc --project ./src/tsconfig.app.json\" \"npm run generate:config\"",
		"build:development": "concurrently \"tsc --project ./tsconfig.json\" \"npm run generate:config\" \"npm run generate:docs\"",
		"generate:config": "copyfiles -u 1 ./src/config/*.json ./dist",
		"generate:docs": "apidoc -i ./src/ -o ./dist/doc/ -f .ts",
		"start": "concurrently \"tsc --watch\" \"nodemon ./dist/index.js\"",
		"start:server": "node ./dist/index.js",
		"test": "concurrently \"tsc\" \"PORT=8883 TEST_DIR='./dist/doc' ARTIFACTS_DIR='./dist/doc' COVERAGE_DIR='./dist/doc' mocha dist/**/*.spec.js --timeout 100000 --exit\"",
		"test:one": "concurrently \"tsc\" \"mocha ./dist/app/v1/core/**/*.spec.js --timeout 100000 --no-coverage --exit\"",
		"lint": "tslint -c ./tslint.json './src/**/*.ts' -e './src/**/*.spec.ts'",
		"seed": "node src/seeders/index.js"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"concurrently": "^6.0.0",
		"copyfiles": "^2.4.1",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"express-csp-header": "^4.1.0",
		"fsevents": "^2.3.2",
		"helmet": "^4.4.1",
		"jnpl-helper": "^1.5.20",
		"lodash": "^4.17.21",
		"mongoose": "^5.12.3",
		"mysql2": "^2.2.5",
		"reflect-metadata": "^0.1.13",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.2"
	},
	"devDependencies": {
		"@types/chai": "^4.2.15",
		"@types/express": "^4.17.11",
		"@types/express-serve-static-core": "^4.17.18",
		"@types/lodash": "^4.14.168",
		"@types/mocha": "^8.2.1",
		"@types/node": "^14.14.31",
		"apidoc": "^0.26.0",
		"chai": "^4.3.0",
		"cross-env": "^7.0.3",
		"mocha": "^8.3.0",
		"mongo-seeding": "^3.6.0",
		"nock": "^13.0.7",
		"nodemon": "^2.0.7",
		"supertest": "^6.1.3",
		"tslint": "^6.1.3"
	}
}
